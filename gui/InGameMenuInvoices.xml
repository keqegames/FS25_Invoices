<?xml version="1.0" encoding="utf-8" standalone="no"?>
<GUI name="inGameMenuInvoices">
	<GuiElement profile="fs25_menuContainer">
        <GuiElement profile="fs25_menuHeaderPanel">
            <Bitmap profile="fs25_menuHeaderIconBg">
                <Bitmap profile="fs25MenuIcon" style="icon" />
            </Bitmap>
            <Text profile="fs25_menuHeaderTitle" id="categoryHeaderText" text="$l10n_ui_invoicesTitle" />
            <RoundCorner profile="fs25_shopMoneyBoxBg" id="shopMoneyBoxBg"/>
			<BoxLayout profile="fs25_shopMoneyBox" id="shopMoneyBox">
				<Text profile="fs25_shopBalance" text="$l10n_ui_balance:"/>
				<Text profile="fs25_shopMoney" id="currentBalanceText"/>
			</BoxLayout>
        </GuiElement>
        <GuiElement profile="fs25_statisticsHeaderBox">
            <!-- Título da tela: INVOICES -->
            <Text style="fs25MenuTitle" text="$l10n_ui_invoicesTitle" position="20 20" />
            <!-- Cabeçalho da lista INBOX -->
            <Text style="fs25SectionHeaderText" text="$l10n_inbox" position="20 80" size="200 40" />
            <!-- Lista INBOX -->
            <SmoothList style="fs25List" id="inboxList" focusInit="onOpen" position="20 120" size="400 400" listSectionHeader="inboxHeader">
                <!-- Cabeçalho da INBOX -->
                <ListItem style="fs25ListSectionHeader" name="inboxHeader">
                    <Text style="fs25SectionHeaderText" text="$l10n_inboxHeader" />
                </ListItem>
                <!-- Template para os itens da INBOX -->
                <ListItem style="fs25ListItem" name="inboxRowTemplate">
                    <Text style="fs25ListItemText" name="status" position="10 0" size="60 40" text="$l10n_status" />
                    <Text style="fs25ListItemText" name="date" position="80 0" size="100 40" text="$l10n_date" />
                    <Text style="fs25ListItemText" name="from" position="190 0" size="130 40" text="$l10n_from" />
                    <Text style="fs25ListItemText" name="amount" position="330 0" size="70 40" text="$l10n_amount" />
                </ListItem>
            </SmoothList>
            <!-- Cabeçalho da lista OUTBOX -->
            <Text style="fs25SectionHeaderText" text="$l10n_outbox" position="460 80" size="200 40" />
                
            <!-- Lista OUTBOX -->
            <SmoothList style="fs25List" id="outboxList" focusInit="onOpen" position="460 120" size="400 400" listSectionHeader="outboxHeader">
                <!-- Cabeçalho da OUTBOX -->
                <ListItem style="fs25ListSectionHeader" name="outboxHeader">
                    <Text style="fs25SectionHeaderText" text="$l10n_outboxHeader" />
                </ListItem>
                <!-- Template para os itens da OUTBOX -->
                <ListItem style="fs25ListItem" name="outboxRowTemplate">
                    <Text style="fs25ListItemText" name="status" position="10 0" size="60 40" text="$l10n_status" />
                    <Text style="fs25ListItemText" name="date" position="80 0" size="100 40" text="$l10n_date" />
                    <Text style="fs25ListItemText" name="to" position="190 0" size="130 40" text="$l10n_to" />
                    <Text style="fs25ListItemText" name="amount" position="330 0" size="70 40" text="$l10n_amount" />
                </ListItem>
            </SmoothList>
        </GuiElement>
    </GuiElement>
</GUI>