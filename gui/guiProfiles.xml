<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<GUIProfiles>
    <!-- Paleta de cores reutilizáveis (RGBA: R, G, B, A) -->
    <Presets>
        <Preset name="colorMainUI"    value="0.0227 0.5346 0.8519 1.0"/>
        <Preset name="colorWhite" value="1 1 1 1"/>
        <Preset name="colorGrayHeader" value="0.4 0.4 0.4 1"/>
        <Preset name="colorListHeaderBackground" value="0 0 0 0.35" />

        <Preset name="colorBlack" value="0 0 0 1"/>             <!-- Preto -->
        <Preset name="colorGray" value="0.5 0.5 0.5 1"/>        <!-- Cinza Médio -->
        <Preset name="colorDarkGray" value="0.2 0.2 0.2 1"/>    <!-- Cinza Escuro -->
    </Presets>
    
    <!-- Fundo do menu -->
    <Profile name="fs25MenuBackground" extends="baseReference">
        <backgroundColor value="$preset_colorDarkGray"/>    <!-- Cor de fundo -->
        <size value="1280 800"/>                            <!-- Tamanho: 1280 x 800 -->
    </Profile>
    
    <!-- Título do menu -->
    <Profile name="fs25MenuTitle" extends="baseReference">
        <textSize value="24"/>                   <!-- Tamanho do texto: 24 -->
        <textBold value="1"/>                    <!-- Negrito ativado -->
        <textColor value="$preset_colorWhite"/>  <!-- Cor do texto: branco -->
        <size value="300 40"/>                   <!-- Tamanho do elemento: 300 x 40 -->
    </Profile>

    <!-- Icone do menu -->
    <Profile name="fs25MenuIcon" extends="baseReference" with="anchorMiddleCenter">
        <size value="50px 50px" />
        <imageSliceId  value="gui/icons/invoicesIcon.dds"/>
        <imageColor value="$preset_fs25_colorMainDark" />
    </Profile>
    
    <!-- Listas -->
    <Profile name="fs25List" extends="baseReference">
        <backgroundColor value="$preset_colorDarkGray"/>    <!-- Fundo da lista -->
        <size value="400 400"/>                             <!-- Tamanho da lista: 400 x 400 -->
    </Profile>
    
    <!-- Cabeçalho das listas -->
    <Profile name="fs25ListSectionHeader" extends="baseReference">
        <textSize value="18"/>                   <!-- Tamanho do texto: 18 -->
        <textBold value="1"/>                    <!-- Negrito ativado -->
        <textColor value="$preset_colorGray"/>   <!-- Cor do texto: cinza -->
        <size value="400 30"/>                   <!-- Tamanho: 400 x 30 -->
    </Profile>
    
    <!-- Texto do cabeçalho da lista -->
    <Profile name="fs25SectionHeaderText" extends="baseReference">
        <textSize value="18"/>                   <!-- Tamanho do texto: 18 -->
        <textBold value="1"/>                    <!-- Negrito ativado -->
        <textColor value="$preset_colorBlack"/>  <!-- Cor do texto: preto -->
        <size value="400 30"/>                   <!-- Tamanho: 400 x 30 -->
    </Profile>
    
    <!-- Itens da lista -->
    <Profile name="fs25ListItem" extends="baseReference">
        <size value="400 40"/>                          <!-- Tamanho do item: 400 x 40 -->
        <backgroundColor value="$preset_colorBlack"/>   <!-- Fundo do item: preto -->
    </Profile>
    
    <!-- Texto dentro dos itens da lista -->
    <Profile name="fs25ListItemText" extends="baseReference">
        <textSize value="16"/>                   <!-- Tamanho do texto: 16 -->
        <textColor value="$preset_colorWhite"/>  <!-- Cor do texto: branco -->
        <size value="150 40"/>                   <!-- Tamanho do campo: 150 x 40 -->
        <textAlignment value="0"/>               <!-- Alinhamento: 0 = esquerda -->
    </Profile>
    
    <!-- Área de botões -->
    <Profile name="fs25ButtonBox" extends="baseReference">
        <size value="1200 50"/>                  <!-- Tamanho da área de botões: 1200 x 50 -->
        <flowDirection value="0"/>               <!-- flowDirection: 0 = horizontal -->
        <alignmentX value="0"/>                  <!-- Alinhamento horizontal: 0 = esquerda -->
    </Profile>
    
    <!-- Botões -->
    <Profile name="fs25Button" extends="baseReference">
        <textSize value="16"/>                          <!-- Tamanho do texto: 16 -->
        <textBold value="1"/>                           <!-- Negrito ativado -->
        <textColor value="$preset_colorWhite"/>         <!-- Cor do texto: branco -->
        <backgroundColor value="$preset_colorGray"/>    <!-- Fundo do botão: cinza -->
        <size value="200 40"/>                          <!-- Tamanho do botão: 200 x 40 -->
        <position value="0 0"/>                         <!-- Posição relativa: 0 0 -->
    </Profile>
</GUIProfiles>
